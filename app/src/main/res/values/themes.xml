<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="FinalTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorSecondaryXDark</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:background">@color/colorSecondaryXDark</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/background</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="android:statusBarColor">@color/colorSecondaryXXDark</item>

        <item name="actionBarTheme">@style/Theme.MyApp.ActionBar</item>

        <item name="android:fontFamily">@font/spotify</item>
    </style>

    <style name="FinalTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:statusBarColor">#16123a</item>
        <item name="colorSurface">#212121</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:fontFamily">@font/spotify</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:statusBarColor">#16123a</item>
        <item name="android:fontFamily">@font/spotify</item>
    </style>

    <style name="IntroTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/spotify</item>
    </style>

    <style name="Theme.MyApp.ActionBar" parent="Widget.Design.AppBarLayout">
        <item name="elevation">4dp</item>
        <item name="android:background">#241f61</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="loader" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">50%</item>
        <item name="android:windowMinWidthMinor">50%</item>
    </style>

</resources>
